<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hall_two_background" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/shelf_one_hall_two"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="125dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shelf_two_hall_two"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_marginTop="125dp"
            android:alpha="0"
            app:layout_constraintStart_toEndOf="@+id/shelf_one_hall_two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shelf_three_hall_two"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_marginTop="125dp"
            android:alpha="0"
            app:layout_constraintStart_toEndOf="@+id/shelf_two_hall_two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shelf_four_hall_two"
            android:layout_width="95dp"
            android:layout_height="105dp"
            android:layout_marginTop="125dp"
            android:alpha="0"
            app:layout_constraintStart_toEndOf="@+id/shelf_three_hall_two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shelf_five_hall_two"
            android:layout_width="90dp"
            android:layout_height="105dp"
            android:layout_marginTop="125dp"
            android:alpha="0"
            app:layout_constraintStart_toEndOf="@+id/shelf_four_hall_two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shelf_six_hall_two"
            android:layout_width="75dp"
            android:layout_height="105dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="130dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shelf_five_hall_two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pedestal_one_hall_two"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="200dp"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="@+id/pedestal_two_hall_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pedestal_two_hall_two"
            android:layout_width="185dp"
            android:layout_height="65dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="225dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/down_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>